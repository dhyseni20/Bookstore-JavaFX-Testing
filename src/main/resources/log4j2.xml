<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <File name="file" fileName="bookstoreLOG.log">
            <PatternLayout pattern="%d [%t] %-5p %c - %m%n"/>
        </File>
    </Appenders>
    <Loggers>
        <Root level="fatal">
            <AppenderRef ref="file"/>
        </Root>
    </Loggers>
</Configuration>